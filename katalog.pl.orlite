#!/usr/bin/env perl

package Model;

use ORLite {
	file    => 'katalog.db',
	unicode => 1,
	create  => sub {
		my $dbh = shift;

		$dbh->do(
			'CREATE TABLE Zustand (
				id INTEGER PRIMARY KEY,
				Beschreibung text)'
		);

		$dbh->do(
			"insert into Zustand (id, Beschreibung) values ( 0, 'Eintrag vollständig')"
		);
		$dbh->do(
			"insert into Zustand (id, Beschreibung) values ( 1, 'Unkorrigiert')"
		);
		$dbh->do(
			"insert into Zustand (id, Beschreibung) values ( 2, 'Ausgeliehen')"
		);

		$dbh->do(
			'CREATE TABLE Buch (
			id INTEGER PRIMARY KEY,
			Kennziffer TEXT NOT NULL,
			Erscheinungsjahr INTEGER,
			Kaufjahr INTEGER,
			Titel TEXT,
			Untertitel TEXT,
			Topografisch TEXT,
			Verlag TEXT,
			ISBN TEXT,
			Dokumentart TEXT,
			Format TEXT,
			Seiten INTEGER,
			Abbildungen INTEGER,
			Karten INTEGER,
			Standort TEXT,
			Abbildung TEXT,
			Inhaltsverzeichnis TEXT,
			Zustand INTEGER references Zustand(id))'
		);

		return 1;
	  }
};

package main;

use Mojolicious::Lite;

get '/' => sub {
	my $c = shift;
} => 'index';

get '/form' => sub {
	my $c = shift;
} => 'form';

# save data from the form
post '/speichern' => sub {
	my $c = shift;

	# all fields from the form
	my @fields = (
		'Kennziffer',  'Erscheinungsjahr',
		'Kaufjahr',    'Titel',
		'Untertitel',  'Topografisch',
		'Verlag',      'ISBN',
		'Dokumentart', 'Format',
		'Seiten',      'Abbildungen',
		'Karten',      'Standort',
		'Abbildung',   'Inhaltsverzeichnis',
		'Zustand'
	);

	# for storing the form fields
	my %form;

	foreach my $field (@fields) {
		$form{$field} = $c->param($field);
	}

	Model::Buch->create(%form);

	#my $insert = $c->insert( $name, $age );

	$c->redirect_to('/');
};

get '/suche_sql' => sub {
	my $c = shift;
} => 'index';

if ( exists $ENV{PAR_TEMP} && $^O eq "MSWin32" ) {
	system qw(start http://localhost:3000);
}

app->start;

__DATA__

